@model MLearning.Web.Models.LearningObjectPageViewModel

@{
    ViewBag.Title = "LOEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LOEdit</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LearningObject</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LO.id)
      
        @Html.HiddenFor(model => model.LO.created_at)
        @Html.HiddenFor(model => model.LO.updated_at)

        <div class="form-group">
            @Html.LabelFor(model => model.LO.title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.title)
                @Html.ValidationMessageFor(model => model.LO.title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LO.type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.type)
                @Html.ValidationMessageFor(model => model.LO.type)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LO.description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.description)
                @Html.ValidationMessageFor(model => model.LO.description)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.LO.url_cover, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.url_cover)
                @Html.ValidationMessageFor(model => model.LO.url_cover)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LO.url_background, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.url_background)
                @Html.ValidationMessageFor(model => model.LO.url_background)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LO.Publisher_id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LO.Publisher_id)
                @Html.ValidationMessageFor(model => model.LO.Publisher_id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <br />
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        <br />


        <h2>PageList</h2>

        <p>
            @Html.ActionLink("Create New", "Create", "Page", new { lo_id =Model.LO.id},null)
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().title)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().url_img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().lo_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().created_at)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pages.FirstOrDefault().updated_at)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Pages)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.url_img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lo_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.created_at)  
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.updated_at)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Page",new { page_id = item.id },null) |
                        @Html.ActionLink("Tags", "Tags", "Page",new { page_id = item.id },null) |
                        @Html.ActionLink("Delete", "Delete", "Page",new { page_id = item.id ,lo_id=item.lo_id},null)
                    </td>
                </tr>
            }

        </table>


     

     

       
    </div>
}


